{
    "compilerOptions": {
        "noEmitOnError": true,
        "noEmitHelpers": true,
        "noUnusedLocals": true,
        "experimentalDecorators": true,
        "noLib": false,
        "sourceMap": false,
        "target": "ES2017",
        "module": "esnext",
        "moduleResolution": "node",
        "outDir": "bin/dist",
        "lib": [
            "es6",
            "dom"
        ],
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "*": [
                "./node_modules/*"
            ]
        },
        "plugins": [{
            "transform": "@nativescript/webpack/transformers/ns-transform-native-classes",
            "type": "raw"
        }]
    }, 
    "exclude": [
        "node_modules", 
        "demo", 
        "bin"
    ]
}